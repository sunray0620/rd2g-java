" Turn on the Syntax Color
sy on

" Turn on Line Number
set nu

" Set the color Scheme to desert
colo desert

" enable backspace
set backspace=2

" Set indent distance
set tabstop=4
set softtabstop=4

set shiftwidth=4
set autoindent
set cindent

" Turn on smart indent
set smartindent

" Set font
set guifont=Courier\ 10\ Pitch\ 10
